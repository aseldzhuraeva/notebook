<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#A682A0"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="12dp"
    android:padding="9dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_card"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/konditor"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="3dp"
        android:layout_marginLeft="12dp">
        <TextView
            android:id="@+id/name_sur_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Persik"
            android:textSize="28sp"/>
        <TextView
            android:id="@+id/num_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0999099656"
            android:textSize="28sp"/>
        <EditText
            android:id="@+id/my_message"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@color/white"
            android:visibility="gone"
            android:backgroundTint="#EDECEC"
            android:hint="write here message"/>

        <ImageButton
            android:id="@+id/dropdown_menu"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_gravity="end"
            android:layout_marginStart="4dp"
            android:background="@drawable/baseline_add_24"
            android:contentDescription="Drop down menu"
            tools:ignore="TouchTargetSizeCheck" />
    </LinearLayout>

</LinearLayout>